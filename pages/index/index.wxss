/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.container{
    width: 100vw;
    height: 100vh;
}

.main-wrapper {
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: #fff;
}
.main-container{
    height: 77%;
}

.container-box {
    height: 100%;
    display: block;
}
.box-logo {
    height: 80%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.box-margin{
    margin-left: .16rem;
    margin-right: .16rem;
}


.main-menu{
    height: 23%;
}

.menu-line {
    height: 8%;
    background-color: #dedfe0;
}

.menu-box {
    display: flex;
    flex-direction: row;
    height: 97%;
}

.box-container {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
}
.box-icon {
    display: flex;
    flex-direction: column;
    border-radius: 500%;
  
}


.button_text{
    font-size: 12px;
    margin: 0;
    text-align: center;
    color: #8e8e8e;
}


